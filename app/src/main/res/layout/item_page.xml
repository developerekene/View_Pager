<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image_view_pager_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tttimage1"
        android:clickable="true"
        android:focusable="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/title_text_tv"/>
    <TextView
        android:id="@+id/title_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_centerInParent="true"
        android:text="Title Text"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/title_text2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="about Topic"
        android:layout_below="@id/title_text_tv"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>
</RelativeLayout>